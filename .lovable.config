# Lovable.dev Configuration File
# This file provides explicit instructions for importing this project

[project]
type = "react-vite-spa"
status = "production-ready"
framework = "react-vite"
build_tool = "vite"
language = "typescript"

[import]
mode = "preserve"
rebuild = false
modify_on_import = false
scan_only = true
preserve_architecture = true
load_documentation = true

[build]
verified = true
typescript_passes = true
production_build_passes = true
dev_server_works = true

[protection]
config_file = ".lovable/config.json"
prompt_file = ".lovable/prompt.xml" 
instructions = ".lovable/IMPORT_INSTRUCTIONS.md"
verification = ".lovable/BUILD_VERIFICATION.md"
system_prompt = ".lovable/SYSTEM_PROMPT.md"

[behavior]
do_not_rebuild = true
do_not_convert_framework = true
do_not_enforce_typescript_strict = true
do_not_recreate_business_logic = true
preserve_existing_architecture = true

[enhancement]
allowed = ["ui-styling", "accessibility", "performance", "new-features"]
prohibited = ["framework-conversion", "authentication-rebuild", "business-logic-recreation"]